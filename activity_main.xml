<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E5E7"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="159dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="249dp"
                android:layout_height="129dp"
                android:layout_marginLeft="90sp"
                android:layout_marginTop="70sp"
                android:layout_marginRight="80sp"
                app:srcCompat="@drawable/uty" />

        </LinearLayout>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="30sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Sulacaca" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="30sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Password" />

        <Button
            android:id="@+id/button"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="142sp"
            android:layout_marginTop="25sp"
            android:layout_marginRight="142sp"
            android:text="Login" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220sp"
            android:layout_marginTop="225sp"
            android:text="You need account ? Sign up."
            android:textColor="#111111" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>